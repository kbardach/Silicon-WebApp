@{
    var user = await UserManager.GetUserAsync(User); 
}

<header>
    <div class="container">
        <a class="logo" asp-action="Home" asp-controller="Default"><img src="~/images/logos/silicon-logo.svg" alt="Silicon" /></a>
        
        <nav>
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="nav-link" asp-action="Home" asp-controller="Default">Overview</a>
                <a class="nav-link" asp-action="features" asp-controller="Default">Features</a>
                <a class="nav-link" asp-action="Courses" asp-controller="Courses">Courses</a> 
                <a class="nav-link" asp-action="Contact" asp-controller="Contact">Contact</a>
            }

            else
            {
                <a class="nav-link" asp-action="Home" asp-controller="Default">Overview</a>
                <a class="nav-link" asp-action="features" asp-controller="Default">Features</a>
                <a class="nav-link" asp-action="Contact" asp-controller="Contact">Contact</a>
            }

        </nav>

        <div class="theme-switch">
            <label for="theme-switch-mode">Light</label>
            <label class="switch">
                <input id="theme-switch-mode" type="checkbox">
                <span class="slider round"></span>
            </label>
            <label for="theme-switch-mode">Dark</label>
        </div>

        @if (SignInManager.IsSignedIn(User) && user != null)
        {
            <div class="profile"> 
                <div class="image">
                    <a asp-action="Details" asp-controller="Account">
                        <img src="@Configuration["FilePath:ProfileImagePath"]/@user.ProfileImage" alt="" />
                    </a>
                </div>
            </div>

        }

        else 
        {

        <div class="account-buttons">
            <a class="btn-theme-secondary btn-small" asp-action="SignIn" asp-controller="Auth"><i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</a>
            <a class="btn-theme btn-small" asp-action="SignUp" asp-controller="Auth"><i class="fa-regular fa-user"></i>Sign up</a>
        </div>

        }

        <button class="btn-menu"><i class="fa-regular fa-bars"></i></button>
    </div>
</header>
